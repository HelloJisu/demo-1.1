<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/treatayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="411dp">

        <ImageView
            android:id="@+id/loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/eyeleftback"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2960"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/treatup_el2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="460"
                tools:ignore="Orientation" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1970"/>

            <ImageView
                android:id="@+id/treatdown_el2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="570"
                tools:ignore="Orientation" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2960"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="460"
                android:weightSum="1"
                android:background="#80FFFFFF"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.27"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.535"
                    android:weightSum="1"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.08"/>

                    <ImageView
                        android:id="@+id/question_el"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.08"
                        app:srcCompat="@drawable/askimg" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.13"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.4"
                        android:gravity="center"
                        android:letterSpacing="0.1"
                        android:text="CARE GUIDE"
                        android:textAlignment="center"
                        android:textColor="#FFFFFF"
                        android:textSize="13sp"
                        android:textStyle="bold"
                        app:fontFamily="@font/roboto"
                        tools:layout_editor_absoluteX="176dp"
                        tools:layout_editor_absoluteY="25dp" />
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.13"/>
                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.13"
                        app:srcCompat="@drawable/grouphomethera_none_icon"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1970"
                android:weightSum="1"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.05"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.87"
                    android:weightSum="1440"
                    android:orientation="horizontal">
                    <com.ssomai.android.scalablelayout.ScalableLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        app:scale_base_width="1440"
                        app:scale_base_height="1800">

                        <ImageView
                            android:id="@+id/e_tright_line1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:scale_height=" 962.7"
                            app:scale_left="378.31"
                            app:scale_top="515"
                            app:scale_width="511.69"
                            app:srcCompat="@drawable/noneyeleft"
                            tools:ignore="MissingPrefix" />

                        <ImageView
                            android:id="@+id/e_tleft_line1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:scale_height="194"
                            app:scale_left="483"
                            app:scale_top="552"
                            app:scale_width="265.45"
                            android:background="@drawable/eyeleftanim1"                             tools:ignore="MissingPrefix" />


                        <ImageView
                            android:id="@+id/e_tleft_line2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:scale_height="150"
                            app:scale_left="425"
                            app:scale_top="671"
                            app:scale_width="285.45"
                            tools:ignore="MissingPrefix"
                            android:background="@drawable/eyeleftanim2"/>

                        <ImageView
                            android:id="@+id/e_tleft_line3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:scale_height="73"
                            app:scale_left="425"
                            app:scale_top="821"
                            app:scale_width="275.45"
                            tools:ignore="MissingPrefix"
                            android:background="@drawable/eyeleftanim3"/>

                        <ImageView
                            android:id="@+id/e_tleft_line4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:scale_height="25"
                            app:scale_left="425"
                            app:scale_top="955"
                            app:scale_width="275.45"
                            tools:ignore="MissingPrefix"
                            android:background="@drawable/eyeleftanim4"/>

                        <ImageView
                            android:id="@+id/e_tleft_line5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:scale_height="73"
                            app:scale_left="447"
                            app:scale_top="1046"
                            app:scale_width="275.45"
                            tools:ignore="MissingPrefix"
                            android:background="@drawable/eyeleftanim5"/>

                        <ImageView
                            android:id="@+id/e_tleft_line6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:scale_height="150"
                            app:scale_left="483"
                            app:scale_top="1108"
                            app:scale_width="275.45"
                            tools:ignore="MissingPrefix"
                            android:background="@drawable/eyeleftanim6"/>

                        <ImageView
                            android:id="@+id/e_tleft_line7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:scale_height="194"
                            app:scale_left="546"
                            app:scale_top="1177"
                            app:scale_width="265.45"
                            tools:ignore="MissingPrefix"
                            android:background="@drawable/eyeleftanim7"/>


                        <TextView
                            android:id="@+id/e_tleft_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="7 left"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"
                            app:fontFamily="@font/roboto"
                            app:scale_height="108"
                            app:scale_left="758"
                            app:scale_textsize="70"
                            app:scale_top="1399"
                            app:scale_width="257"
                            tools:ignore="MissingPrefix" />


                    </com.ssomai.android.scalablelayout.ScalableLayout>

                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/component"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="570"
                android:weightSum="1"
                android:orientation="vertical"
                android:background="#80FFFFFF">

                <TextView
                    android:id="@+id/componenttxt_2"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="0.2"
                    android:gravity="center"
                    android:text="DIRECTION"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    app:fontFamily="@font/roboto" />

                <TextView
                    android:id="@+id/componenttxt_el"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="0dp"
                    android:layout_weight="0.7"
                    android:gravity="center"
                    android:text="THIS COLUMN HAS 7 LINES.\nPLACE THE DEVICE TO THE COLORED LINE AS\nSHOWN. AND PRESS THE CENTER BUTTON TO\n START TREATING ONE LINE"
                    android:textAlignment="center"
                    android:textColor="#180018"
                    app:fontFamily="@font/roboto" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />



    <!--underleft-->


    <!--cheekright-->


    <!--cheekleft-->





</android.support.constraint.ConstraintLayout>